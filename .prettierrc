# Prettier configuration

printWidth: 180
singleQuote: true
tabWidth: 4
trailingComma: all
endOfLine: auto
importOrderSeparation: true
importOrderSortSpecifiers: true
importOrder:
  - "^app/(.*)$|^[./]"
importOrderParserPlugins:
  - "jsx"
  - "decorators-legacy"

# java rules:
overrides:
  - files: "*.java"
    options:
      tabWidth: 4
  - files: "*.ts"
    options:
      importOrderParserPlugins:
        - "typescript"
        - "decorators-legacy"
  - files: "src/test/cypress/**/*.ts"
    options:
      importOrderParserPlugins:
        - "typescript"
        - "decorators-legacy"
      importOrder:
        - "^app/(.*)$"
        - "^[./]"
